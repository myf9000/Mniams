<% provide(:title, "Home") %>
<h4>Listing mniams (<%= @mniams.count %>)</h4>

<div id="tag_cloud">
  <% tag_cloud Mniam.tag_counts, %w[s m l] do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>


<br>
<%= link_to "New", new_mniam_path, class: "btn btn-default"  %>
<%= link_to "Filtering", mniams_path, class: "btn btn-default"  %>

<hr>
<% @mniams.each do |f| %>
	<%= f.title %>
	<%= f.description %>
	<%= link_to "Show", f, class: "btn btn-default" %>
	<br>
<% end %>

<hr>
<%= link_to "News", static_pages_News_path, class: "btn btn-default" %>
<%= link_to "About", static_pages_About_path, class: "btn btn-default" %>
<%= link_to "Contact", static_pages_Contact_path, class: "btn btn-default" %>
