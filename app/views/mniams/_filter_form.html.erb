<%= search_form_for @search do |f| %>
  <div class="large-5 small-4 columns">
    <%= f.label :price_gteq, class: "movie-label" %>
    <%= f.text_field :price_gteq, class: "radius", placeholder: "Minumum Price" %>
  </div>
  <h6 class="large-2 small-4 columns center"><span>And</span></h6>
  <div class="large-5 small-4 columns">
    <%= f.label :price_lteq, class: "movie-label" %>
    <%= f.text_field :price_lteq, class: "radius", placeholder: "Maximum Price" %>
  </div>

  <h6 class="large-2 small-4 columns center"><span>And</span></h6>
  <div class="large-5 small-4 columns">
    <%= f.label :preparation_time_lteq, class: "movie-label" %>
    <%= f.text_field :preparation_time_lteq, class: "radius", placeholder: "Time" %>
  </div>

  <h6 class="large-2 small-4 columns center"><span>And</span></h6>
  <div class="large-5 small-4 columns">
    <%= f.label :difficulty_eq, class: "movie-label" %>
    <%= f.select :difficulty_eq, [ 'Easy', 'Medium', 'Hard'], :prompt => 'Select One', class: "radius"%>
  </div>

  <h6 class="large-2 small-4 columns center"><span>And</span></h6>
  <div class="large-5 small-4 columns">
    <%= f.label :typ_eq, class: "movie-label" %>
    <%= f.select :typ_eq, [ 'Dinner', 'Breakfast', 'Lunch', 'Snack', 'Diet', 'Dessert'], :prompt => 'Select One', class: "radius"%>
  </div>

  <div class="column">
    <%= f.submit "Search", class: " radius button" %>
  </div>
<% end %>