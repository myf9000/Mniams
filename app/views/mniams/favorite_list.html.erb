<% provide(:title, "Favorites") %>
 <div class="col-md-6 col-md-offset-3">
 <div class="panel panel-default">
    <div class="panel-body">
<h4>Your favorites list (<%= @mniams.count %>)</h4>
    <% @mniams.each do |f| %>
    <table class="table table-striped table-hover ">
    <tbody>
    <tr class="success">
    <div class="col-md-7">
      <td><%= link_to (image_tag f.avatar.url(:medium), class: "img_small"), f  %>
    </div>
    <div class="col-md-6">
      <h4>
        <%= f.title%>
      </h4>
       <%= link_to "Unfavorite", favorite_mniam_path(f, type: "unfavorite"), method: :put, class: "btn btn-primary" %> </div></td>
      </div>
    </tr>
    </tbody>
    </table>
    <% end %>
</div>
</div>
</div>