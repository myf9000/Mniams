<% provide(:title, "Top") %>

<div class="row">
<div class="col-md-4 col-md-offset-4">
<div class="col-md-12">
  <p style="text-align:center"><%= image_tag('best.png')%></p>
</div> 

<hr>

  <% @top.each_with_index do |f, index| %>
  <table class="table table-striped table-hover ">
    <tbody>
    <tr>
      <td style="text-align:center">
      <br>
        <%= link_to (image_tag f.avatar.url(:medium), class: "top_img"), f %>
      <h2>
        <%= f.title%>
      </h2>
      <p><b>Rank: </b><%=index+1%>
		<span class="label label-primary"><%= f.score %> <span class="glyphicon glyphicon-heart" aria-hidden="true"></span></span></p></td>
      </p>
      </tr>
      </tbody>
      </table>
     
  <% end %>

</div>
</div>