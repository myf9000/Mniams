<% provide(:title, "Top") %>

<h2>The BEST meal for Week!</h2>

<hr>
<div class="transitions-enabled" id="mniams">
  <% @top.each_with_index do |f, index| %>
    <div class="box panel panel-default">
    <div class="hover13 column">
      <figure><%= link_to (image_tag f.avatar.url), f %></figure>
     </div>
      <h2>
        <a><%= link_to f.title, f %></a>
      </h2>
      <p>Rank: <%=index+1%>
		<span class="label label-primary"><%= f.score(f) %> <span class="glyphicon glyphicon-heart" aria-hidden="true"></span></span></p>
      </p>
    </div>
  <% end %>
</div>

