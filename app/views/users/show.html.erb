<% provide(:title, @user.email) %>
<div class="col-md-8 col-md-offset-2">
  <div class="container-fluid">
  <div class="row">

<div class="col-md-6">
  <%= (image_tag @user.user_avatar.url(:medium), class: "user_img") %>
</div>

<div class="col-md-6">
  <h3><%= @user.email %></h3>
  <p><%= @user.desc %></p>
  <div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>
<br>
</div>
<hr>

<div class="col-md-6">
  <br>
  <%= social_share_button_tag(@user.email) %>
</div>

<div class="col-md-6">
  <%= render 'follow_form' if signed_in? %> 
</div>
<div class="col-md-12">
<h4>All mniams:</h4>
  <% @user.mniams.each do |f| %>
        <%= link_to (image_tag f.avatar.url(:medium), class: "img_related"),f  %>
  <% end %>
</div>

<div class="col-md-12">
<hr>
<%= link_to "Back", users_path, class: "btn btn-default" %>
<% if @user == current_user %>
  <%= link_to 'Edit Profile', edit_user_registration_path, class: "btn btn-primary" %>
<% end %>
</div>
</div>
</div>
</div>