<% provide(:title, "Users") %>
<hr>

<%= will_paginate @posts %>
<br>
<% @users.each do |user| %>
	<%= user.email %>
	<b>Rank (<%= @rank =%>)</b>
	<%= link_to "Show", user, class: "btn btn-default" %>
	<% if current_user.admin? %>
  		<%= link_to "Delete", user, method: :delete, data:{confirm: "Are you sure?"}, class: "btn btn-default" %>
	<%end%>
	<br>
<% end %>


<hr>
<%= link_to "Back", root_path, class: "btn btn-default" %>
