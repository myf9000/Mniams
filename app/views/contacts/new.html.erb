<% provide(:title, "Contact" ) %>


<div class="col-md-12">
      <p style="text-align:center"><%= image_tag('send.png')%></p>
    </div>
    
<div class="col-md-8 col-md-offset-2"> 
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
    <%= simple_form_for @contact, html: { multipart: true } do |f| %>

    <div class="col-md-6">
      <%= f.input :name, input_html: {class: 'form-control'} %>
    </div>

    <div class="col-md-6">
      <%= f.input :email, input_html: {class: 'form-control'}%>
    </div>

    <div class="col-md-12">
      <%= f.label :message%>
      <%= f.text_area :message, class: 'form-control', rows: 8%>
    </div>
    
    <div class="hidden">
      <div class="col-md-6">
        <%= f.input :nickname, hint: 'leave this field blank' %>
      </div>
    </div>

    <div class="col-md-12">
    <br>
      <%= f.button :submit, "Send", class: "btn btn-primary" %>
  	</div>

   	<% end %>
    </div>
  </div>
</div>
</div>